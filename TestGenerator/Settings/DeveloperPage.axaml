<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TestGenerator.Settings.DeveloperPage">
    <Grid Margin="0 0 10 0">
        <StackPanel Spacing="5">
            <Button Click="ButtonOpenLogs_OnClick" Classes="Border">Открыть файл с логами</Button>
            <Button Click="ButtonOpenPlugins_OnClick" Classes="Border">Открыть папку плагинов</Button>
            <CheckBox Name="ShowAllTasksBox" IsCheckedChanged="ShowAllTasksBox_OnIsCheckedChanged">Показывать все фоновые задачи</CheckBox>
            <CheckBox Name="AllowKillAllTasksBox" Click="AllowKillAllTasksBox_OnClick">Разрешить отменять все фоновые задачи</CheckBox>
        </StackPanel>
    </Grid>
</UserControl>
