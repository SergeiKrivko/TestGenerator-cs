<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TestGenerator.MainTabs.Code.OpenedFileTab">
    <ToggleButton Name="RootButton" IsCheckedChanged="RootButton_OnIsCheckedChanged" Margin="0" BorderThickness="0"
                  CornerRadius="0">
        <StackPanel Orientation="Horizontal" Spacing="5">
            <PathIcon Name="Icon"></PathIcon>
            <TextBlock Name="NameBlock" VerticalAlignment="Center" />
            <Button Name="CloseButton" Width="22" Height="22" CornerRadius="10" BorderThickness="0"
                    Click="CloseButton_OnClick">
                <PathIcon Width="10" Height="10" Data="{DynamicResource IconClose}"></PathIcon>
            </Button>
        </StackPanel>
    </ToggleButton>
</UserControl>