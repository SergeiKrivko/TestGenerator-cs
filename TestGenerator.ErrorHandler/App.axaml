<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avaluxUi="clr-namespace:AvaluxUI;assembly=AvaluxUI.Avalonia"
             x:Class="TestGenerator.ErrorHandler.App"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://AvaluxUI.Avalonia/Colors.axaml"></ResourceInclude>
                <ResourceInclude Source="avares://AvaluxUI.Avalonia/Icons.axaml"></ResourceInclude>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <avaluxUi:AvaluxUIStyles />

    </Application.Styles>
</Application>