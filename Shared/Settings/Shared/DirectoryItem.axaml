<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Shared.Settings.Shared.DirectoryItem">
    <StackPanel Orientation="Vertical" Spacing="5">
        <StackPanel Orientation="Horizontal" Spacing="5">
            <Button Name="ButtonExpand" Click="ButtonExpand_OnClick" Height="20" Width="20" Padding="0" FontSize="15">▶</Button>
            <Button Name="ButtonCollapse" IsVisible="False" Click="ButtonCollapse_OnClick" Height="20" Width="20" Padding="0" FontSize="15">▼</Button>
            <CheckBox Name="CheckBox" VerticalAlignment="Center" IsCheckedChanged="CheckBox_OnIsCheckedChanged"></CheckBox>
            <TextBlock Name="NameBlock" VerticalAlignment="Center"></TextBlock>
        </StackPanel>
        <StackPanel Name="ChildrenPanel" IsVisible="False" Spacing="5" Margin="20 0 0 0"/>
    </StackPanel>
</UserControl>
