<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TestGenerator.Shared.Settings.PathField">
    <StackPanel Spacing="5">
        <TextBlock Name="Label"></TextBlock>
        <Grid ColumnDefinitions="* Auto">
            <TextBox Name="TextBox" LostFocus="TextBox_OnLostFocus"></TextBox>
            <Button Grid.Column="1" Margin="5 0 0 0" Click="Button_OnClick">Обзор</Button>
        </Grid>
    </StackPanel>
</UserControl>
